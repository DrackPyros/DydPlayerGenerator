<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="dy_d.list">
      <field name="name">DyD list</field>
      <field name="model">dy_d.generator</field>
      <field name="arch" type="xml">
        <tree string = "vistaPersonajes">
          <field name="Raza"/>
          <field name="Clase"/>

          <field name="Fuerza"/>
          <field name="Destreza"/>
          <field name="Constitucion"/>
          <field name="Inteligencia"/>
          <field name="Sabiduria"/>
          <field name="Carisma"/>
          <field name="PG"/>
          <field name="CA"/>
          <field name="Nombre"/>
          <field name="Jugador"/>
          <field name="Nivel"/>
          <field name="Alineamiento"/>
          <field name="Deidad"/>
          <field name="Tamaño"/>
          <field name="Edad"/>
          <field name="Sexo"/>
          <field name="Altura"/>
          <field name="Peso"/>
          <field name="Ojos"/>
          <field name="Cabello"/>
          <field name="Piel"/>
        </tree>
      </field>
    </record>


